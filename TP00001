        // í´ë¦½ë³´ë“œ ë³µì‚¬
        function copyToClipboard() {
            navigator.clipboard.writeText(window.location.href).then(() => {
                // ê°„ë‹¨í•œ í† ìŠ¤íŠ¸ ë©”ì‹œì§€
                const toast = document.createElement('div');
                toast.style.cssText = \`
                    position: fixed;
                    bottom: 20px;
                    left: 50%;
                    transform: translateX(-50%);
                    background: var(--primary);
                    color: white;
                    padding: 12px 24px;
                    border-radius: 8px;
                    font-size: 0.9rem;
                    z-index: 10000;
                    animation: fadeInOut 3s forwards;
                \`;
                toast.textContent = 'ğŸ‰ ë§í¬ê°€ í´ë¦½ë³´ë“œì— ë³µì‚¬ë˜ì—ˆìŠµë‹ˆë‹¤!';
                document.body.appendChild(toast);
                
                // í† ìŠ¤íŠ¸ ì• ë‹ˆë©”ì´ì…˜
                const toastStyle = document.createElement('style');
                toastStyle.textContent = \`
                    @keyframes fadeInOut {
                        0% { opacity: 0; transform: translateX(-50%) translateY(10px); }
                        20%, 80% { opacity: 1; transform: translateX(-50%) translateY(0); }
                        100% { opacity: 0; transform: translateX(-50%) translateY(-10px); }
                    }
                \`;
                document.head.appendChild(toastStyle);
                
                setTimeout(() => {
                    document.body.removeChild(toast);
                    document.head.removeChild(toastStyle);
                }, 3000);
            }).catch(() => {
                alert('í´ë¦½ë³´ë“œ ë³µì‚¬ë¥¼ ì§€ì›í•˜ì§€ ì•ŠëŠ” ë¸Œë¼ìš°ì €ì…ë‹ˆë‹¤.');
            });
        }

            // ì°¨íŠ¸ ì´ˆê¸°í™” í•¨ìˆ˜
        function initializeCharts() {
            if (!window.Chart) return;

            Chart.defaults.responsive = true;
            Chart.defaults.maintainAspectRatio = false;
            Chart.defaults.font.family = 'Noto Serif KR, Georgia, serif';
            Chart.defaults.font.size = window.innerWidth < 480 ? 10 : 12;
            Chart.defaults.color = '#1a1008'; // ê°•í™”ëœ í…ìŠ¤íŠ¸ ìƒ‰ìƒ
            Chart.defaults.backgroundColor = '#ffffff';

            // ê°œë… êµ¬ì„±ë„ ì°¨íŠ¸
            const conceptCtx = document.getElementById('conceptChart');
            if (conceptCtx) {
                new Chart(conceptCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['í•¨ìˆ˜ì˜ ìë™í™”', 'í”„ë¡œì„¸ì‹± í‘œì¤€í™”', 'í˜„ì‹¤ ëª¨ë¸ë§'],
                        datasets: [{
                            data: [35, 35, 30],
                            backgroundColor: ['#8b4513', '#d2691e', '#a0522d'],
                            borderWidth: 3,
                            borderColor: '#ffffff',
                            hoverBorderWidth: 4,
                            hoverBorderColor: '#1a1008'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 15,
                                    usePointStyle: true,
                                    color: '#1a1008',
                                    font: {
                                        size: window.innerWidth < 480 ? 10 : 12,
                                        weight: '600'
                                    }
                                }
                            },
                            tooltip: {
                                backgroundColor: 'rgba(26, 16, 8, 0.95)',
                                titleColor: '#ffffff',
                                bodyColor: '#ffffff',
                                borderColor: '#8b4513',
                                borderWidth: 2,
                                titleFont: { weight: 'bold' },
                                bodyFont: { weight: 'normal' }
                            }
                        },
                        animation: { duration: 2000 }
                    }
                });
            }

            // ì² í•™ì ë¹„êµ ì°¨íŠ¸
            const philosopherCtx = document.getElementById('philosopherChart');
            if (philosopherCtx) {
                new Chart(philosopherCtx, {
                    type: 'radar',
                    data: {
                        labels: ['ì¶”ìƒí™”', 'ë…¼ë¦¬ì„±', 'ìœ ì—°ì„±', 'êµ¬ì¡°í™”', 'ì°½ì˜ì„±'],
                        datasets: [
                            {
                                label: 'í”Œë¼í†¤ (Java)',
                                data: [95, 85, 40, 90, 60],
                                borderColor: '#8b4513',
                                backgroundColor: 'rgba(139, 69, 19, 0.15)',
                                fill: true,
                                borderWidth: 3,
                                pointBackgroundColor: '#8b4513',
                                pointBorderColor: '#ffffff',
                                pointBorderWidth: 2,
                                pointRadius: 4
                            },
                            {
                                label: 'ë‹ˆì²´ (JavaScript)',
                                data: [60, 50, 95, 40, 90],
                                borderColor: '#d2691e',
                                backgroundColor: 'rgba(210, 105, 30, 0.15)',
                                fill: true,
                                borderWidth: 3,
                                pointBackgroundColor: '#d2691e',
                                pointBorderColor: '#ffffff',
                                pointBorderWidth: 2,
                                pointRadius: 4
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            r: {
                                beginAtZero: true,
                                max: 100,
                                backgroundColor: 'rgba(255, 255, 255, 0.8)',
                                ticks: {
                                    stepSize: 20,
                                    color: '#1a1008',
                                    backdropColor: 'rgba(255, 255, 255, 0.8)',
                                    font: {
                                        size: window.innerWidth < 480 ? 9 : 11,
                                        weight: '500'
                                    }
                                },
                                pointLabels: {
                                    color: '#1a1008',
                                    font: {
                                        size: window.innerWidth < 480 ? 10 : 12,
                                        weight: '600'
                                    }
                                },
                                grid: {
                                    color: 'rgba(139, 69, 19, 0.3)'
                                },
                                angleLines: {
                                    color: 'rgba(139, 69, 19, 0.3)'
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    color: '#1a1008',
                                    font: {
                                        size: window.innerWidth < 480 ? 11 : 13,
                                        weight: '600'
                                    }
                                }
                            },
                            tooltip: {
                                backgroundColor: 'rgba(26, 16, 8, 0.95)',
                                titleColor: '#ffffff',
                                bodyColor: '#ffffff',
                                borderColor: '#8b4513',
                                borderWidth: 2
                            }
                        },
                        animation: { duration: 2000, easing: 'easeInOutQuart' }
                    }
                });
            }
        }

        // í‚¤ë³´ë“œ ë„¤ë¹„ê²Œì´ì…˜ ì§€ì›
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Tab') {
                document.body.classList.add('keyboard-navigation');
            }
            if (e.key === 'Escape') {
                const menu = document.getElementById('errorMenu');
                if (menu && menu.style.display === 'block') {
                    toggleErrorMenu();
                }
            }
        });

        document.addEventListener('mousedown', function() {
            document.body.classList.remove('keyboard-navigation');
        });

        // ì„±ëŠ¥ ëª¨ë‹ˆí„°ë§
        window.addEventListener('load', function() {
            document.body.classList.add('loaded');
            console.log('í˜ì´ì§€ ë¡œë“œ ì™„ë£Œ: ì² í•™ì  í”„ë¡œê·¸ë˜ë° í•™ìŠµë¡ ');
            
            // ì„±ëŠ¥ ë©”íŠ¸ë¦­ ë¡œê¹… (ì„ íƒì‚¬í•­)
            if ('performance' in window) {
                const loadTime = performance.now();
                console.log(\`í˜ì´ì§€ ë¡œë“œ ì‹œê°„: \${loadTime.toFixed(2)}ms\`);
            }
        });

        // ì—ëŸ¬ ì²˜ë¦¬
        window.addEventListener('error', function(e) {
            console.error('JavaScript Error:', e.error);
        });
        // PWA ì§€ì› ë° ìµœì¢… ìµœì í™”
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', function() {
                // ì‹¤ì œ ë°°í¬ ì‹œì—ë§Œ ì„œë¹„ìŠ¤ ì›Œì»¤ ë“±ë¡
                if (location.protocol === 'https:' || location.hostname === 'localhost') {
                    navigator.serviceWorker.register('/sw.js')
                        .then(function(registration) {
                            console.log('ServiceWorker ë“±ë¡ ì„±ê³µ:', registration.scope);
                            showToast('ğŸ“± ì˜¤í”„ë¼ì¸ì—ì„œë„ ì´ìš© ê°€ëŠ¥í•©ë‹ˆë‹¤', 'info');
                        })
                        .catch(function(err) {
                            console.log('ServiceWorker ë“±ë¡ ì‹¤íŒ¨:', err);
                        });
                }
            });
        }

        // ë„¤íŠ¸ì›Œí¬ ìƒíƒœ ëª¨ë‹ˆí„°ë§
        if ('navigator' in window && 'onLine' in navigator) {
            function updateNetworkStatus() {
                const isOnline = navigator.onLine;
                if (!isOnline) {
                    showToast('ğŸ”Œ ì˜¤í”„ë¼ì¸ ìƒíƒœì…ë‹ˆë‹¤', 'warning');
                } else {
                    showToast('ğŸŒ ì˜¨ë¼ì¸ ìƒíƒœë¡œ ë³µêµ¬ë˜ì—ˆìŠµë‹ˆë‹¤', 'success');
                }
            }

            window.addEventListener('online', updateNetworkStatus);
            window.addEventListener('offline', updateNetworkStatus);
        }

        // ì‚¬ìš©ì ê²½í—˜ ê°œì„  - ìŠ¤í¬ë¡¤ ì„±ëŠ¥ ìµœì í™”
        let scrollTimeout;
        window.addEventListener('scroll', function() {
            // ìŠ¤í¬ë¡¤ ì¤‘ì—ëŠ” ë³µì¡í•œ ê³„ì‚° ì§€ì—°
            clearTimeout(scrollTimeout);
            document.body.classList.add('scrolling');
            
            scrollTimeout = setTimeout(function() {
                document.body.classList.remove('scrolling');
            }, 150);
        }, { passive: true });

        // ìŠ¤í¬ë¡¤ ì¤‘ ì• ë‹ˆë©”ì´ì…˜ ì¶•ì†Œ
        const scrollOptimizationStyle = document.createElement('style');
        scrollOptimizationStyle.textContent = `
            .scrolling * {
                animation-duration: 0.1s !important;
                transition-duration: 0.1s !important;
            }
        `;
        document.head.appendChild(scrollOptimizationStyle);

        // ìµœì¢… ì™„ì„±ë„ ì²´í¬
        document.addEventListener('DOMContentLoaded', function() {
            const requiredElements = [
                'progressBar', 'navbar', 'main-content', 
                'quick-summary', 'errorSelector', 'diagnosis'
            ];
            
            const missingElements = requiredElements.filter(id => !document.getElementById(id));
            
            if (missingElements.length > 0) {
                console.warn('ì¼ë¶€ ìš”ì†Œê°€ ëˆ„ë½ë˜ì—ˆìŠµë‹ˆë‹¤:', missingElements);
            } else {
                console.log('âœ… ëª¨ë“  í•µì‹¬ ìš”ì†Œê°€ ì •ìƒì ìœ¼ë¡œ ë¡œë“œë˜ì—ˆìŠµë‹ˆë‹¤');
            }
        });
    </script>

